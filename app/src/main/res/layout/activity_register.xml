<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pt.ulisboa.tecnico.cmov.airdesk_g10.activities.RegisterActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/email_txt"
        android:layout_above="@+id/password_txt"
        android:layout_alignLeft="@+id/nickname_txt"
        android:layout_alignStart="@+id/nickname_txt"
        android:layout_marginBottom="42dp"
        android:hint="Your email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nickname_txt"
        android:hint="Choose Nickname"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/password_txt"
        android:layout_marginRight="70dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="70dp"
        android:layout_below="@+id/register_btn"
        android:layout_alignLeft="@+id/password_txt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_txt"
        android:hint="Choose Password"
        android:layout_below="@+id/nickname_txt"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordConfirmation_txt"
        android:hint="Confirm Password"
        android:layout_below="@+id/password_txt"
        android:layout_alignLeft="@+id/nickname_txt"
        android:layout_alignStart="@+id/nickname_txt"
        android:layout_marginTop="47dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/register_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp" />

</RelativeLayout>
