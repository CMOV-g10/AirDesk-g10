<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Owned Workspaces"
        android:id="@+id/ownedWS_btn"
        android:longClickable="false"
        android:layout_marginBottom="77dp"
        android:layout_above="@+id/foreignWS_btn"
        android:layout_alignLeft="@+id/foreignWS_btn"
        android:layout_alignStart="@+id/foreignWS_btn"
        android:layout_alignRight="@+id/foreignWS_btn"
        android:layout_alignEnd="@+id/foreignWS_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foreign Workspaces"
        android:id="@+id/foreignWS_btn"
        android:layout_above="@+id/logout_btn"
        android:layout_marginBottom="97dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/logout_btn"


        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp" />
</RelativeLayout>
