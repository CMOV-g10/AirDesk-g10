<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.ulisboa.tecnico.cmov.airdesk_g10" >

    <application
        android:name=".AirDesk"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activities.OwnedWSActivity"
            android:label="Owned Workspaces" >
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:label="Login" >
            <intent-filter android:label="AirDesk">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ForeignWSActivity"
            android:label="Subscribed Workspaces" >
        </activity>
        <activity
            android:name=".activities.ConfigWSActivity"
            android:label="Edit Workspace" >
        </activity>
        <activity
            android:name=".activities.SubscriptionListActivity"
            android:label="Subscription List" >
        </activity>
        <activity
            android:name=".activities.SearchByTagsActivity"
            android:label="Search Workspaces by Tag" >
        </activity>
        <activity
            android:name=".activities.FileListActivity"
            android:label="Workspace File List" >
        </activity>
        <activity
            android:name=".activities.FileActivity"
            android:label="File" >
        </activity>
        <activity
            android:name=".activities.RegisterActivity"
            android:label="Register User" >
        </activity>
        <activity
            android:name=".activities.UserPermissionsActivity"
            android:label="Workspace Permissions" >
        </activity>
    </application>

</manifest>
