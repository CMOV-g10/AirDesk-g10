<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.ulisboa.tecnico.cmov.airdesk_g10" >

    <application
        android:name="AirDesk"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".activities.OwnedWSActivity"
            android:label="@string/title_activity_owned_ws">
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ForeignWSActivity"
            android:label="@string/title_activity_foreign_ws" >
        </activity>
        <activity
            android:name=".activities.ConfigWSActivity"
            android:label="@string/title_activity_config_ws" >
        </activity>
        <activity
            android:name=".activities.SubscriptionListActivity"
            android:label="@string/title_activity_subscription_list">
        </activity>
        <activity
            android:name=".activities.SearchByTagsActivity"
            android:label="@string/title_activity_search_by_tags">
        </activity>
        <activity
            android:name=".activities.FileListActivity"
            android:label="@string/title_activity_file_list" >
        </activity>
        <activity
            android:name=".activities.EditFileActivity"
            android:label="@string/title_activity_edit_file" >
        </activity>
        <activity
            android:name=".activities.ReadFileActivity"
            android:label="@string/title_activity_read_file">
        </activity>
        <activity
            android:name=".activities.RegisterActivity"
            android:label="@string/title_activity_register">
        </activity>
    </application>

</manifest>
